<%= form_for @employee do |f| %>
  <!-- <h1><%= @employee.errors.full_messages %></h1> -->
  <div class="form-group">
    <label for="exampleInputEmail1">name</label>
  <%= f.text_field :name, class: "form-control", placeholder: "Enter name"  %>
  </div>
  <div class="form-group">
    <label for="exampleInputPassword1">email</label>
    <%= f.text_field :email, class: "form-control", placeholder: "Enter email"  %>
  </div>

  <div class="form-group">
    <label for="exampleInputPassword1">Password</label>
    <%= f.text_field :password, class: "form-control", placeholder: "Enter password"  %>
  </div>

  <div class="form-group">
    <label for="exampleInputPassword1">password confirm</label>
    <%= f.text_field :password_confirm, class: "form-control", placeholder: "Enter password confirm"  %>
  </div>
  <%= f.submit "submit", class: "btn btn-primary"%>
<% end %>
